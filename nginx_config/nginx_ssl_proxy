server {
    listen 80;
    server_name securestorage.web;
    return 301 https://$host$request_uri;
}


server {
    listen 443 ssl;
    server_name securestorage.web;
    access_log /home/ubuntu/project/3rd_yr_project/secure_file_storage_system/logs/access.log;

    ssl_certificate /home/ubuntu/project/3rd_yr_project/secure_file_storage_system/https_certs/cert.pem;
    ssl_certificate_key /home/ubuntu/project/3rd_yr_project/secure_file_storage_system/https_certs/key.pem;

    # Additional SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA:ECDHE-RSA-AES256-SHA:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA';

    location / {
        proxy_pass http://127.0.0.1:1234;  # Points to Gunicorn
        include proxy_params;
    }

    location /static/ {
        proxy_pass http://127.0.0.1:1234;
        include proxy_params;
    }


    location ~ /\.ht {
        deny all;
    }
}
